<div class = "row">
    <div class="col-md-12">
        <h1>{{title}}</h1>
        <hr />
    </div>
</div>

<div class="row"> 
    <div class="col-md-12"> 
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                        <tr>
                            <td><a href="/employees?department={{departmentId}}"> {{departmentId}} </a></td>
                            <td><a href="/employees?department={{departmentId}}"> {{departmentName}} </a> </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

